  </head>
  <body>

    <main>
        <form id="formEstadoIncidente">
            <select id="estadoIncidente">
                <option value="ACTIVO">Abierto</option>
                <option value="CERRADO">Cerrado</option>
            </select>
            <button type="submit">Buscar</button>
        </form>

        <div id="listaIncidentes"></div>

