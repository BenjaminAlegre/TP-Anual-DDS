    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script>
        document.getElementById('formEstadoIncidente').addEventListener('submit', function(e) {
            e.preventDefault();
            var estado = document.getElementById('estadoIncidente').value;
            fetch('/incidentesPorEstado?estado=' + estado)
                .then(response => {
                        if (!response.ok) {
                            throw new Error('Respuesta del servidor no fue OK');
                        }
                        if (!response.headers.get('content-type').includes('application/json')) {
                            throw new Error('No se recibió JSON');
                        }
                        return response.json();
                    })
                .then(incidentes => {
                    var contenedor = document.getElementById('listaIncidentes');
                    contenedor.innerHTML = ''; // Limpiar resultados anteriores
                    incidentes.forEach(incidente => {
                        var elemento = document.createElement('div');
                        elemento.innerHTML = '<p>ID: ' + incidente.id + '</p>' +
                                             '<p>Estado: ' + incidente.estado + '</p>';
                        // Añadir más detalles del incidente
                        contenedor.appendChild(elemento);
                    });
                })
                .catch(error => console.error('Error:', error));
        });
    </script>

  </body>
</html>