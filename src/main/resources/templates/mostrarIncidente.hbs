<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Apertura de Incidentes</title>
    <link rel="stylesheet" href="../CSS/mostrarIncidente.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  </head>

  <body>

    <header>
        <img src="../imagenes/volver atras 64px.png" style="margin-left:3vw; margin-top:3vh">
    </header>

    <main>
        <div class="container py-4">
            <h2 class="text-center mb-4">Lista de Incidentes</h2>
            <div id="incidentesContainer" class="row">
<!--                <h3 class="card-title">Incidente #</h3>-->
<!--                <h6 class="card-text">Estado: Activo</h6>-->
<!--                <p class="card-text">Observaciones</p>-->
<!--                <a href="#" class="btn btn-danger" id="cerrarIncidenteBtn">Cerrar Incidente</a>-->

            </div>
        </div>
    </main>

    <!-- <script src="./index.js"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            fetch('/obtenerIncidentes')
                .then(response => response.json())
                .then(incidentes => {
                    const container = document.getElementById('incidentesContainer');
                    incidentes.forEach(incidente => {
                        const incidenteDiv = document.createElement('div');
                        incidenteDiv.className = 'card';
                        incidenteDiv.style.width = '20rem';

                        // Formatear la fecha de horarioApertura si es necesario
                        const fechaApertura = new Date(incidente.horarioApertura).toLocaleDateString();

                        incidenteDiv.innerHTML = `
                            <div class="card-body">
                                <h3 class="card-title">Incidente #${incidente.id}</h3>
                                <h6 class="card-text">Estado: ${incidente.estado}</h6>
                                <p class="card-text">Apertura: ${fechaApertura}</p>
                                <p class="card-text">${incidente.observaciones}</p>
                                <button class="btn btn-danger" onclick="cerrarIncidente(${incidente.id})">Cerrar Incidente</button>
                            </div>
                        `;

                        container.appendChild(incidenteDiv);
                    });
                });
        });

        function cerrarIncidente(incidenteId) {
            fetch(`/cerrarIncidente/${incidenteId}`, { method: 'POST' })
                .then(response => {
                    if (response.ok) {
                        console.log('Incidente cerrado con éxito');
                        // Opcional: Recargar la lista de incidentes o actualizar la UI
                        location.reload(); // Recarga la página para ver los cambios
                    } else {
                        console.error('Error al cerrar el incidente');
                    }
                })
                .catch(error => console.error('Error:', error));
        }
    </script>




  </body>
</html>