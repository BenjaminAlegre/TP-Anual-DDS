<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comunidades del Miembro</title>
    <link rel="stylesheet" type="text/css" href="../../stylesheets/comunidadDeMiembro.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>

<header>
    <a href="#" id="volver-atras">
        <img src="../../img/volver atras 64px.png" style="margin-left:3vw; margin-top:3vh">
    </a>
</header>

<main>
    <div class="titulo-principal">
        <h1 id="titulo-comunidades">Comunidades del Miembro</h1>
    </div>
    <div class="comunidad-list" id="comunidad-list">
        <!-- Contenido de las comunidades se llenará dinámicamente aquí -->
    </div>
</main>

<!-- <script src="./index.js"></script> -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Manejar clic en "Volver Atrás"
    $('#volver-atras').on('click', function(e) {
        e.preventDefault();
        window.location.href = '/paginaPrincipal';
    });

    // Lógica para cargar dinámicamente las comunidades del miembro usando AJAX
    $(document).ready(function() {
        const idMiembro = /* Obtener el ID del miembro */;
        $.ajax({
            url: `/api/miembros/${idMiembro}/comunidades`, // Endpoint de la API
            method: 'GET',
            success: function(data) {
                // Lógica para llenar dinámicamente la plantilla con datos
                const comunidadesHtml = data.map(comunidad => `
                    <div class="comunidad-box">
                        Nombre de la Comunidad: ${comunidad.nombre}
                        Tipo de Miembro: ${comunidad.tipoMiembro}
                    </div>
                `).join('');
                $('#comunidad-list').html(comunidadesHtml);
            },
            error: function(error) {
                console.error('Error al cargar las comunidades:', error);
            }
        });
    });
</script>
</body>

</html>