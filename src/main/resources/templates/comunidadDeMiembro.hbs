<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Comunidades del Miembro</title>

   <link rel="stylesheet" type="text/css" href="../../stylesheets/comunidadDeMiembro.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  </head>
  <body>

    <header>
        <img src="../../img/volver atras 64px.png" style="margin-left:3vw; margin-top:3vh">
    </header>

    <main>
        <div class="titulo-principal">
            <h1>Comunidades del Miembro {{miembroId}}</h1>
        </div>
        <div class="comunidad-list">
            {{#if comunidades}}
                {{#each comunidades}}
                    <div class="comunidad-box">
                        Nombre de la Comunidad: {{this.comunidad.nombre}}
                        Tipo de Miembro: {{this.tipoMiembro}}
                    </div>
                {{/each}}
            {{else}}
                <div class="comunidad-box">
                    No hay comunidades para este miembro
                </div>
            {{/if}}
        </div>
    </main>

    <!-- <script src="./index.js"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

  </body>

</html>
